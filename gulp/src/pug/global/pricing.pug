include variables

section.pricing
    .container
        .row.justify-content-center
            .col-xl-8
                h2.about__title Pricing Plan
                p.about__text Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
        .row.justify-content-around
            each val, index in pricing_title
                .col-xl-4.col-md-6
                    .price
                        .price__head
                            p= val
                            sup $ 
                            span= pricing_price[index] 
                            sup per month
                        .price__body
                            ul
                                each val in pricing_body
                                    li= val
                        .price__footer
                            button Order Now
